// 通用制造设备定义（GenericCrafter类型，游戏中常见的可放置制造建筑）
{
        "drawer":{
        "type":"DrawMulti",
        "drawers":[
            "DrawDefault",
            "DrawCultivator",
            ]
    },
  "type": "GenericCrafter",  // 设备类型：通用制造机
  "name": "记忆找回机",  // 设备名称：铒钌熔炉（推测为“Endrium”对应合金的专属熔炉）
  "description": "利用初级芯片的算力获得记忆碎片\n需要水冷却",  // 设备描述：制造芯片
  "size": 2,  // 设备尺寸：3x3格（游戏格子单位，代表设备在地图上占据的空间大小）
  "itemCapacity": 20,  // 物品容量：30（设备内部可存储的物品总数量上限）
  "craftTime": 180,  // 制造时间：300帧（完成一次合金熔炼所需时间，约6秒，按60帧/秒计算）
  "consumes": {  // 消耗配置：制造一次所需的资源
    "power": 2.5,  // 能量消耗：5.8单位/帧（设备运行时每秒消耗120单位能量，5.8*60）
    "items": {  // 物品消耗列表
      "items": [
        "初级芯片/2",  // 消耗钍（thorium）：5个/次
        "铁锈/1"    // 消耗银钒矿（silvus）：3个/次
      ],
    },
    "liquid": {  // 液体消耗配置
      "liquid": "water",  // 消耗液体：低温冷却液（cryofluid，推测用于给熔炉降温）
      "amount": 0.1          // 液体消耗量：0.5单位/帧（每次制造共消耗240单位，0.5*480）
    },
  },
  "outputItems": [  // 产出物品列表：制造一次的产物
    "回忆碎片/3"  // 产出铒钌合金（endrium）：1个/次
  ],
  "consumeEffect": "titanExplosion",
  "canOverdrive": true  // 是否支持超频：否（无法通过额外资源提升发效率或速度
  "researchCostMultiplier": 0.6,  // 研究成本倍率：0.2（降低该设备的研究资源消耗，仅需基础成本的20%）
  "category": "crafting",  // 设备分类：制造类（在游戏建造菜单的“制造”分类下显示）
  "research": "生物质合成区",  // 解锁条件：需要先研究“合金熔炉”（alloy-smelter）科技
  "requirements": [  // 建造需求：制造该设备所需的材料
    "青铜矿石/80",    // 铜：120个
    "劣质硅/50",      // 铅：175个
    "铁锈/40",
    "初级芯片/35",
  ],
}
